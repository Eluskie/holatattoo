// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - synced with Supabase Auth
model User {
  id        String   @id // Supabase Auth UUID
  email     String   @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  studios   Studio[]

  @@map("users")
}

model Studio {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name           String
  email          String
  whatsappNumber String?  @map("whatsapp_number")
  webhookUrl     String?  @map("webhook_url")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  botConfig      BotConfig?
  conversations  Conversation[]

  @@index([userId])
  @@map("studios")
}

model BotConfig {
  id             String   @id @default(uuid())
  studioId       String   @unique @map("studio_id")
  studio         Studio   @relation(fields: [studioId], references: [id], onDelete: Cascade)

  welcomeMessage String   @map("welcome_message")
  questions      Json     // Array of BotQuestion objects
  brandingColor  String   @default("#000000") @map("branding_color")
  logoUrl        String?  @map("logo_url")

  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("bot_configs")
}

model Conversation {
  id            String   @id @default(uuid())
  studioId      String   @map("studio_id")
  studio        Studio   @relation(fields: [studioId], references: [id], onDelete: Cascade)

  userPhone     String   @map("user_phone")
  status        String   @default("active") // 'active', 'pending_update_confirmation', 'closed'
  currentStep   Int      @default(0) @map("current_step")
  collectedData Json     @default("{}") @map("collected_data")
  messages      Json     @default("[]") // Array of {role: 'user'|'bot', content: string, timestamp: string}

  // Lead tracking
  leadStatus    String?  @map("lead_status") // 'pending', 'sent', 'updated'
  leadSentAt    DateTime? @map("lead_sent_at")
  lastUpdatedAt DateTime? @map("last_updated_at")
  
  // Price estimation
  estimatedPriceMin Int?     @map("estimated_price_min") // Minimum estimated price in euros
  estimatedPriceMax Int?     @map("estimated_price_max") // Maximum estimated price in euros
  
  // Conversation closure
  closedAt      DateTime? @map("closed_at")
  closeReason   String?   @map("close_reason")
  
  // Pending updates (for confirmation flow)
  pendingUpdate Json?     @map("pending_update")

  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([studioId])
  @@index([userPhone])
  @@index([status])
  @@index([leadStatus])
  @@map("conversations")
}

model TestTemplate {
  id          String   @id @default(uuid())
  name        String
  description String?
  
  // Conversation data
  messages    Json     @default("[]") // Array of {role: 'user'|'bot', content: string, timestamp: string}
  finalData   Json     @default("{}") // Collected data at end
  finalStatus String   @default("active") // 'qualified', 'closed', 'active', etc.
  
  // Metadata
  messageCount Int      @default(0)
  leadSent     Boolean  @default(false)
  
  // Events tracking
  events      Json     @default("[]") // Array of {type, tool, timestamp, data}
  
  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("test_templates")
}
